<div id="frame">
	<% if true %>
		<div id="count">
			<%= @message %>
		</div>
	<% end %>
	<div id="results">
		<h2>Submitted Information</h2>
		<table>
			<tr>
				<td>Name:</td>
				<td><%= @data["name"] %></td>
			</tr>
			<tr>
				<td>Dojo Location:</td>
				<td><%= @data["location"] %></td>
			</tr>
			<tr>
				<td>Favorite Language:</td>
				<td><%= @data["language"] %></td>
			</tr>
			<tr>
				<td>Comment:</td>
				<td><%= @data["comment"] %></td>
			</tr>
		</table>
		<form action="/">
			<button type="submit">Go Back</button>
		</form>
	</div>
</div>